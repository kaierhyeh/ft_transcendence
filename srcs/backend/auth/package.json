	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/better-sqlite3": "^7.0.0",
		"@types/jsonwebtoken": "^9.0.0",
		"@types/node": "^20.0.0",
		"@types/qrcode": "^1.5.0",
